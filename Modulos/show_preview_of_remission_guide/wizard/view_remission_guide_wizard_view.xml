<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_remission_guide_wizard_form" model="ir.ui.view">
        <field name="name">preview.remission.guide.wizard.form.view</field>
        <field name="model">preview.remission.guide.wizard</field>
        <field name="arch" type="xml">
            <form string="Previsualizacion de la guia de remision">                 
                <group string="Informacion general">
                    <group>
                        <field name="date" readonly="1" string="Fecha:"/>
                        <field name="reference" readonly="1"  string="Referencia:"/>
                        <field name="partner" readonly="1"  string="Destinatario:"/>
                        <field name="direction" readonly="1"  string="Direccion:"/>
                    </group>
                    <group>
                        <field name="transporter" readonly="1"  string="Transportista:"/>
                        <field name="start_point" readonly="1"  string="Punto de Partida:"/>
                        <field name="end_point" readonly="1" string="Punto de llegada:"/>
                        <field name="phone" readonly="1"  string="Telef:"/>
                    </group>
                </group>
                <group string="Detalle de Cristales">
                        <field name="mode" invisible="1" readonly="1" />
                        <field name="data" readonly="1" />
                </group>
                <footer>
                    <button string ="Cancelar" name="cancel" special="cancel" class="oe_link oe_inline"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>